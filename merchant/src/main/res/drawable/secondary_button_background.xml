<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dialog_button_radius" />
            <stroke android:color="@color/secondary_button_stroke_color"/>
            <solid android:color="#ffe0e0e0" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dialog_button_radius" />
            <stroke android:color="@color/secondary_button_stroke_color"
                android:width="1dp"/>
            <solid android:color="@color/secondary_button_pressed_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dialog_button_radius" />
            <stroke android:color="@color/secondary_button_stroke_color"
                android:width="1dp"/>
            <solid android:color="@color/secondary_button_background_color" />
        </shape>
    </item>
</selector>