<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/AppThemeBase">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/deep_purple_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/color_red_accent</item>
        <item name="windowActionBar">true</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <!--<item name="colorAccent">@color/accent</item>-->
    </style>

    <style name="TextAppearance.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/float_label</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogButtonStyle" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@drawable/action_bar_button_background</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:minWidth">88.0dip</item>
        <item name="android:minHeight">36.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyProgressBarStyle" parent="android:Widget.Holo.ProgressBar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:indeterminate">true</item>
        <item name="cpb_color">@color/color_red_accent</item>
        <item name="cpb_max_sweep_angle">300</item>
        <item name="cpb_min_sweep_angle">10</item>
        <item name="cpb_rotation_speed">1.0</item>
        <item name="cpb_stroke_width">4dp</item>
        <item name="cpb_sweep_speed">1.0</item>
    </style>


    <style name="SpinnerItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/text_light</item>
    </style>


    <style name="TextAppearance.RobotoMedium" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

</resources>
