<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="fontPath" format="string" />

    <declare-styleable name="SelectableButton">
        <attr name="position" format="enum">
            <enum name="left" value="0"/>
            <enum name="middle" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

    <attr name="aspectRatio" format="float" />
    <attr name="aspectRatioEnabled" format="boolean" />
    <attr name="dominantMeasurement">
        <enum name="width" value="0" />
        <enum name="height" value="1" />
    </attr>

    <declare-styleable name="AspectRatioImageView">
        <attr name="aspectRatio" />
        <attr name="aspectRatioEnabled" />
        <attr name="dominantMeasurement" />
    </declare-styleable>

    <declare-styleable name="AspectRatioTextView">
        <attr name="aspectRatio" />
        <attr name="aspectRatioEnabled" />
        <attr name="dominantMeasurement" />
    </declare-styleable>
</resources>
