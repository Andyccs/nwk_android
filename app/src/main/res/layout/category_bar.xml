<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Food"
            android:background="@drawable/category_background_leftmost"
            android:id="@+id/category_food"
            android:layout_weight="2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Fashion"
            android:id="@+id/category_fashion"
            android:background="@drawable/category_background"
            android:layout_weight="2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Lifestyle"
            android:id="@+id/category_lifestyle"
            android:background="@drawable/category_background"
            android:layout_weight="2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Other"
            android:id="@+id/category_other"
            android:background="@drawable/category_background_rightmost"
            android:layout_weight="2"/>
    </LinearLayout>
</RelativeLayout>