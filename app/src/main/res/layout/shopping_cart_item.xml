<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:src="@drawable/like_white"
        android:scaleType="centerCrop"
        android:layout_weight="2"
        android:id="@+id/promotion_image"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Summer Discount Paradise - Reduction for RM 10000"
            android:textColor="@color/promotion_item_title"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="18sp"
            android:id="@+id/promotion_title"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Redeem by 12 September 2014, 17:15"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:id="@+id/promotion_expiry"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="14sp"
                android:layout_width="14sp"
                android:src="@drawable/marker"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Marie's Shop, 02-225"
                android:textColor="@color/promotion_item_secondary"
                android:textSize="14sp"
                android:id="@+id/promotion_venue"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>